    qt_libdir=$dir;
    LIBQTEXACT="-lqt-mt"
    break; 
  else 
    try="ls -1 $dir/libqt*"
    if test=`eval $try 2> /dev/null`; then 
      qt_libdir=$dir;
      break; 
    else 
      echo "tried $dir" >&AC_FD_CC ; fi
    echo "tried $dir" >&AC_FD_CC ; fi
